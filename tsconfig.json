{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Source Maps */
    "sourceMap": true,
    "inlineSources": true,

    /* Node + TS interop */
    "types": ["node", "vitest"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts", "tests/**/*.ts", "benchmarks/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "scripts/dev/**/*.ts"]
}
