{
  "name": "memora",
  "version": "0.1.0",
  "description": "Memora - Context & Memory MCP server for long-running LLM tasks",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --import ./scripts/register-ts-node.mjs src/index.ts",
    "mcp": "node --import ./scripts/register-ts-node.mjs src/index.ts",
    "seed:demo": "node --import ./scripts/register-ts-node.mjs scripts/demo_seed.ts",
    "build": "tsc",
    "start": "node --experimental-specifier-resolution=node dist/src/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && vitest run",
    "test:watch": "vitest",
    "test:unit": "npm run typecheck && vitest run --dir tests/unit",
    "test:integration": "npm run typecheck && vitest run --dir tests/integration",
    "test:e2e": "npm run typecheck && vitest run --dir tests/e2e",
    "coverage": "vitest run --coverage",
    "dev:embedder": "node --import ./scripts/register-ts-node.mjs scripts/dev/embedder_server.ts",
    "dev:reranker": "node --import ./scripts/register-ts-node.mjs scripts/dev/reranker_server.ts",
    "dev:reranker:cohere": "node --import ./scripts/register-ts-node.mjs scripts/dev/reranker_cohere_server.ts",
    "dev:rerank:smoke": "node --import ./scripts/register-ts-node.mjs scripts/dev/rerank_smoke.ts",
    "prepare": "husky",
    "bench:longmem": "bash benchmarks/runners/run_longmemeval.sh --variant C --seed 42 --out benchmarks/reports/longmemeval.C.42.jsonl",
    "bench:longmem:A": "bash benchmarks/runners/run_longmemeval.sh --variant A --seed 42 --out benchmarks/reports/longmemeval.A.42.jsonl",
    "bench:longmem:B": "bash benchmarks/runners/run_longmemeval.sh --variant B --seed 42 --out benchmarks/reports/longmemeval.B.42.jsonl",
    "bench:longmem:C": "bash benchmarks/runners/run_longmemeval.sh --variant C --seed 42 --out benchmarks/reports/longmemeval.C.42.jsonl",
    "bench:longmem:driver": "node --import ./scripts/register-ts-node.mjs benchmarks/runners/longmemeval_driver.ts --dataset benchmarks/LongMemEval/data/longmemeval_oracle.json --out benchmarks/reports/memora_predictions.jsonl --variant C --seed 42",
    "bench:longmem:score": "node --import ./scripts/register-ts-node.mjs benchmarks/runners/score_longmemeval.ts --hyp benchmarks/reports/memora_predictions.jsonl --dataset benchmarks/LongMemEval/data/longmemeval_oracle.json --tag memora",
    "bench:longmem:smoke": "npm run bench:longmem:driver && npm run bench:longmem:score",
    "bench:mab:driver": "node --import ./scripts/register-ts-node.mjs benchmarks/runners/mab_driver.ts --source 'longmemeval_s*' --split Accurate_Retrieval --seed 42",
    "bench:mab:score": "node --import ./scripts/register-ts-node.mjs benchmarks/runners/score_mab.ts --method memora --source 'longmemeval_s*' --split Accurate_Retrieval --seed 42 --judge gpt-4o",
    "bench:mab:smoke": "npm run build && npm run bench:mab:driver && npm run bench:mab:score",
    "bench:locomo:driver": "node --import ./scripts/register-ts-node.mjs benchmarks/runners/locomo_driver.ts",
    "bench:locomo:score": "node --import ./scripts/register-ts-node.mjs benchmarks/runners/score_locomo.ts",
    "bench:locomo:run": "bash benchmarks/runners/run_locomo.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@opensearch-project/opensearch": "^3.0.0",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.0",
    "openai": "^4.58.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.0",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.45.0",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sstults/memora.git"
  },
  "homepage": "https://github.com/sstults/memora#readme",
  "bugs": {
    "url": "https://github.com/sstults/memora/issues"
  }
}
