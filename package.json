{
  "name": "memora",
  "version": "0.1.0",
  "description": "Memora - Context & Memory MCP server for long-running LLM tasks",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --import ./scripts/register-ts-node.mjs src/index.ts",
    "mcp": "node --import ./scripts/register-ts-node.mjs src/index.ts",
    "seed:demo": "node --import ./scripts/register-ts-node.mjs scripts/demo_seed.ts",
    "build": "tsc",
    "start": "node --experimental-specifier-resolution=node dist/src/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && vitest run",
    "test:watch": "vitest",
    "test:unit": "npm run typecheck && vitest run --dir tests/unit",
    "test:integration": "INTEGRATION=1 vitest run --dir tests/integration",
    "coverage": "vitest run --dir tests/unit --coverage",
    "prepare": "husky",
    "dev:trace:episodic": "bash scripts/dev/tail_episodic_index.sh",
    "dev:trace:episodic:follow": "FOLLOW=1 bash scripts/dev/tail_episodic_index.sh",
    "dev:trace:filter": "bash scripts/dev/filter_trace.sh",
    "dev:trace:stats": "bash scripts/dev/trace_stats.sh",
    "dev:trace:stats:sample": "SAMPLE=1 bash scripts/dev/trace_stats.sh",
    "smoke:write": "node --import ./scripts/register-ts-node.mjs scripts/dev/mcp_write_smoke.ts",
    "smoke:retrieve": "node --import ./scripts/register-ts-node.mjs scripts/dev/mcp_retrieve_smoke.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@opensearch-project/opensearch": "^3.0.0",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.0",
    "openai": "^4.58.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.0",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.45.0",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sstults/memora.git"
  },
  "homepage": "https://github.com/sstults/memora#readme",
  "bugs": {
    "url": "https://github.com/sstults/memora/issues"
  }
}
